@model IEnumerable<WarehouseApp.Models.RotatingProductReportItem>
@using System.Linq

@{
    ViewData["Title"] = "Raport towarów rotujących (TOP WZ)";
    var totalOut = Model.Sum(m => m.QuantityOut);
}

<h1>Raport towarów rotujących (TOP WZ)</h1>

<form method="get" class="mb-4">
    <div class="row g-2">

        <div class="col-md-3">
            <label class="form-label">Data od</label>
            <input type="date" name="from" value="@ViewBag.From" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Data do</label>
            <input type="date" name="to" value="@ViewBag.To" class="form-control" />
        </div>

        <div class="col-md-3">
            <label class="form-label">TOP</label>
            <input type="number" name="top" value="@ViewBag.Top" class="form-control" min="1" max="100" />
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <div>
                <button type="submit" class="btn btn-primary me-2">Filtruj</button>
                <a asp-action="TopRotating" class="btn btn-secondary">Wyczyść</a>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>#</th>
            <th>Towar</th>
            <th>Kod</th>
            <th class="text-end">Ilość wydana (WZ)</th>
            <th class="text-end">Udział %</th>
        </tr>
    </thead>
    <tbody>
        @{
            int lp = 1;
        }
        @foreach (var item in Model)
        {
            var share = totalOut > 0 ? (item.QuantityOut / totalOut * 100m) : 0m;
            <tr>
                <td>@lp</td>
                <td>@item.ProductName</td>
                <td>@item.ProductCode</td>
                <td class="text-end">@item.QuantityOut.ToString("0.###")</td>
                <td class="text-end">@share.ToString("0.0") %</td>
            </tr>
            lp++;
        }
    </tbody>
    <tfoot>
        <tr class="fw-bold">
            <td colspan="3" class="text-end">Łączna ilość wydań (WZ):</td>
            <td class="text-end">@totalOut.ToString("0.###")</td>
            <td></td>
        </tr>
    </tfoot>
</table>

@if (!Model.Any())
{
    <p>Brak danych dla wybranych parametrów.</p>
}

