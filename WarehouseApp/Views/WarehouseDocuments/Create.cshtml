@model WarehouseApp.Models.WarehouseDocument

@{
    ViewData["Title"] = "Nowy dokument magazynowy";
}

<h1>Nowy dokument magazynowy</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <!-- novalidate = brak walidacji po stronie przeglądarki -->
        <form asp-action="Create" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="DocumentNumber" class="control-label"></label>
                <input asp-for="DocumentNumber" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="DocumentType" class="control-label"></label>
                <select asp-for="DocumentType"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<WarehouseApp.Models.Enums.DocumentType>()">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="BusinessPartnerId" class="control-label"></label>
                <select asp-for="BusinessPartnerId" class="form-control" asp-items="ViewBag.BusinessPartnerId">
                    <option value="">-- wybierz kontrahenta --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="SourceLocationId" class="control-label"></label>
                <select asp-for="SourceLocationId" class="form-control" asp-items="ViewBag.SourceLocationId">
                    <option value="">-- wybierz lokalizację źródłową --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="TargetLocationId" class="control-label"></label>
                <select asp-for="TargetLocationId" class="form-control" asp-items="ViewBag.TargetLocationId">
                    <option value="">-- wybierz lokalizację docelową --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="InvoiceNumber" class="control-label"></label>
                <input asp-for="InvoiceNumber" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Wróć do listy</a>
            </div>
        </form>
    </div>
</div>
